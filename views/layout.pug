doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Task Manager
    link(rel="stylesheet", href='/bower_components/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/styles.css')
  body
    .nav-bar
      ul.underline
        a.nav-link(href='/login') Login
        | 
        a.nav-link(href='/register') Register
        | 
        a.nav-link(href='/logout') Logout
        | 
        a.nav-link(href='/admin/tasks') Tasks

    .container
      h2 Task Manager
      p.date Welcome to the Task Manager app. Have fun!
      if user
        h3 You are logged as #{ user.username } w/ id #{ user._id }
      else
        h3 You are NOT logged!

    block content
      

